@model CameraShop.Models.NguoiDung
@{
    ViewBag.Title = "Address And Payment";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{ 
    <fieldset>
        <legend>Thông tin địa chỉ và thanh toán</legend>
        @{ if (Session["UserName"] != null)
           {
            <div>
                Bạn đang đặt hàng bằng tài khoản @Session["TenNguoiDung"]
            </div>
           }
           else
           { 
            <div>
                Nếu bạn đã có tài khoản tại trang web chúng tui, vui lòng đăng nhập.
                Nếu không vui lòng nhập các thông tin sau ( không phải đăng ký tài khoản tại web site)
            </div>
               <fieldset>
                <legend>Thông tin của bạn</legend>
 
                <div class="editor-label">
                    @Html.LabelFor(model => model.TenNguoiDung)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.TenNguoiDung)
                    @Html.ValidationMessageFor(model => model.TenNguoiDung)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.GioiTinh)  @Html.EditorFor(model => model.GioiTinh) Nam
                </div> 
                <div class="editor-label">
                    @Html.LabelFor(model => model.DiaChi)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.DiaChi)
                    @Html.ValidationMessageFor(model => model.DiaChi)
                </div>

                <div class="editor-label">
                     @Html.LabelFor(model => model.DienThoai)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.DienThoai)
                    @Html.ValidationMessageFor(model => model.DienThoai)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Email)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Email)
                    @Html.ValidationMessageFor(model => model.Email)
                </div>

                <div class="editor-label">
                     @Html.LabelFor(model => model.NamSinh)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.NamSinh)
                    @Html.ValidationMessageFor(model => model.NamSinh)
                </div> 
            </fieldset>
           }
           
        }
           <input type="submit" value="Tiếp tục" />
    </fieldset>
 
    
 
}