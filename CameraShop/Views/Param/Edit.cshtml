@model CameraShop.Models.Parameter

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/js/ckeditor/ckeditor.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        //Define FCKEditor
        CKEDITOR.replace('LeftAd', {
            filebrowserBrowseUrl: '../Content/ckfinder/ckfinder.html',
            filebrowserImageBrowseUrl: '../Content/ckfinder/ckfinder.html?Type=Images',
            filebrowserFlashBrowseUrl: '../Content/ckfinder/ckfinder.html?Type=Flash',
            filebrowserUploadUrl: '../Content/ckfinder/core/connector/php/connector.php?command=QuickUpload&type=Files',
            filebrowserImageUploadUrl: '../Content/ckfinder/core/connector/php/connector.php?command=QuickUpload&type=Images',
            filebrowserFlashUploadUrl: '../Content/ckfinder/core/connector/php/connector.php?command=QuickUpload&type=Flash'
        });
        CKEDITOR.replace('RightAd', {
            filebrowserBrowseUrl: '../Content/ckfinder/ckfinder.html',
            filebrowserImageBrowseUrl: '../Content/ckfinder/ckfinder.html?Type=Images',
            filebrowserFlashBrowseUrl: '../Content/ckfinder/ckfinder.html?Type=Flash',
            filebrowserUploadUrl: '../Content/ckfinder/core/connector/php/connector.php?command=QuickUpload&type=Files',
            filebrowserImageUploadUrl: '../Content/ckfinder/core/connector/php/connector.php?command=QuickUpload&type=Images',
            filebrowserFlashUploadUrl: '../Content/ckfinder/core/connector/php/connector.php?command=QuickUpload&type=Flash'
        });
        CKEDITOR.replace('ContactContent', {
            filebrowserBrowseUrl: '../Content/ckfinder/ckfinder.html',
            filebrowserImageBrowseUrl: '../Content/ckfinder/ckfinder.html?Type=Images',
            filebrowserFlashBrowseUrl: '../Content/ckfinder/ckfinder.html?Type=Flash',
            filebrowserUploadUrl: '../Content/ckfinder/core/connector/php/connector.php?command=QuickUpload&type=Files',
            filebrowserImageUploadUrl: '../Content/ckfinder/core/connector/php/connector.php?command=QuickUpload&type=Images',
            filebrowserFlashUploadUrl: '../Content/ckfinder/core/connector/php/connector.php?command=QuickUpload&type=Flash'
        });
    });
</script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Parameter</legend>

        @Html.HiddenFor(model => model.ID)

        <div class="editor-label">
            @Html.LabelFor(model => model.LeftAd)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.LeftAd)
            @Html.ValidationMessageFor(model => model.LeftAd)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.RightAd)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.RightAd)
            @Html.ValidationMessageFor(model => model.RightAd)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ContactContent)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.ContactContent)
            @Html.ValidationMessageFor(model => model.ContactContent)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
