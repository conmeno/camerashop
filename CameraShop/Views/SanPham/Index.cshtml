@model IEnumerable<CameraShop.Models.SanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.dataTables.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/demo_table_jui.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
<script type="text/javascript" charset="utf-8">
    $(document).ready(function () {
        oTable = $('#example').dataTable({
            "bJQueryUI": true,
            "sPaginationType": "full_numbers",
            "sScrollX": "100%",
            "sScrollXInner": "140%",
            "bScrollCollapse": true
        });
    });
</script>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="demo_jui">
    <table cellpadding="0" cellspacing="0" border="0" class="display" id="example">
        <thead>
            <tr>
                <th>
                    MaSanPham
                </th>
                <th>
                    DongSanPham
                </th>
                <th>
                    LoaiSanPham
                </th>
                <th>
                    KhuyenMai
                </th>
                <th>
                    TenSanPham
                </th>
                <th>
                    Hình ảnh
                </th>
                <th>
                    GiaBan
                </th>
                <th>
                    NgayDang
                </th>
                <th>
                    SoLuong
                </th>
                <th>
                    TinhTrang
                </th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="gradeA">
                    <td>
                        @Html.DisplayFor(modelItem => item.MaSanPham)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DongSanPham.TenDongSanPham)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LoaiSanPham.TenLoaiSanPham)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.KhuyenMai.TenKhuyenMai)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenSanPham)
                    </td>
                    <td>
                        @Html.ActionLink("QL Hình Ảnh", "Create", "AnhSanPham", new { id = item.MaSanPham }, "")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GiaBan)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayDang)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoLuong)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TinhTrang)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.MaSanPham }) |
                        @Html.ActionLink("Details", "Details", new { id = item.MaSanPham }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.MaSanPham })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
